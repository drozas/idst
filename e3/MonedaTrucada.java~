//  Moneda.java       Autor: Lewis/Loftus
//                    Adaptador por: GSyC
//
//  Representa una moneda que puede ser lanzada al aire
//********************************************************************

import java.util.Random;

public class Moneda
{
   private final int CARA = 0;
   private final int CRUZ = 1;

   private int estado;

   //-----------------------------------------------------------------
   //  Crea una moneda, lanzándola al aire inicialmente
   //-----------------------------------------------------------------
   public Moneda ()
   {
      lanza();
   }

   //-----------------------------------------------------------------
   //  Lanza la moneda asignándole un valor aleatorio
   //-----------------------------------------------------------------
   public void lanza ()
   {
      estado = (int) (Math.random() * 2);
   }

   //-----------------------------------------------------------------
   //  Devuelve true si el estado actual es CARA
   //-----------------------------------------------------------------
   public boolean esCara ()
   {
      return (estado == CARA);
   }

   //-----------------------------------------------------------------
   //  Devuelve el estado actual como un String
   //-----------------------------------------------------------------
   public String toString()
   {
      String nombreEstado;

      if (estado == CARA)
         nombreEstado = "Cara";
      else
         nombreEstado = "Cruz";

      return nombreEstado;
   }
}
