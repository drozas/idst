public class tipoD extends Vehiculo
{
    private static  final char claseD='D';

    //-----------------------------------------------------------------
    //  Construye un vehiculo de tipo A
    //-----------------------------------------------------------------
    public tipoD (int identificador, double velocidad)
    {
	super(identificador,claseD,velocidad);
	
    }
    
    //-----------------------------------------------------------------
    //  Devuelve un string con la información del vehiculo tipoA
    //-----------------------------------------------------------------
    public String toString()
    {
	
	String resultado = super.toString();
	resultado += "\n";
	return resultado;
    }
    
    
    
    public void correUnKilometro () 
    {
	double explota;
	explota= //valor aletaorio;

	//Aumentamos el tiempo, con lo que ha tardado en recorrer este km
	this.tiempoReal= this.tiempoReal + (1/this.velocidad);
	//El tiempo compensado es el acumulado, no varia
	this.tiempoCompensado= this.tiempoReal;
	//El gasto acumulado no varia
	this.gastoAcumulado= this.gastoAcumulado;
	//Los de tipo D nunca explotan
    }

}